name: Build TWRP (AOSP) for TALIH-PD1

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    name: Build TWRP
    runs-on: ubuntu-latest

    env:
      TZ: "Asia/Shanghai"
      DEVICE: tb8788p1_64_wifi
      OUTDIR: ${{ github.workspace }}/out

    steps:
    - name: Checkout device tree
      uses: actions/checkout@v3
      with:
        submodules: true

    - name: Clean runner space
      run: |
        sudo rm -rf /home/runner/android
        sudo rm -rf /home/runner/actions-runner/cached/*

    - name: Install dependencies
      run: |
        sudo apt-get update
        sudo apt-get install -y \
          bc bison build-essential curl flex g++-multilib gcc-multilib git gnupg gperf \
          libncurses5-dev libstdc++6 zlib1g libssl-dev python3 unzip xz-utils zip

    - name: Install repo tool
      run: |
        mkdir -p ~/bin
        curl https://storage.googleapis.com/git-repo-downloads/repo > ~/bin/repo
        chmod a+x ~/bin/repo
        echo 'export PATH=$HOME/bin:$PATH' >> $GITHUB_ENV

    - name: Setup repo (AOSP TWRP)
      run: |
        mkdir -p ~/android/twrp
        cd ~/android/twrp
        repo init -u https://github.com/minimal-manifest-twrp/platform_manifest_twrp_aosp.git -b twrp-12.1
        repo sync -c -j$(nproc) --no-clone-bundle --no-tags --depth=1

    - name: Cache TWRP repo
      uses: actions/cache@v3
      with:
        path: ~/android/twrp/.repo
        key: twrp-repo-${{ hashFiles('**/manifest.xml') }}
        restore-keys: |
          twrp-repo-

    - name: Copy device tree
      run: |
        mkdir -p ~/android/twrp/device/alps/$DEVICE
        cp -r $GITHUB_WORKSPACE/* ~/android/twrp/device/alps/$DEVICE/

    - name: Setup environment
      run: |
        cd ~/android/twrp
        source build/envsetup.sh
        lunch omni_$DEVICE-eng

    - name: Build TWRP recovery
      run: |
        cd ~/android/twrp
        mka recoveryimage -j$(nproc)

    - name: Upload recovery image
      uses: actions/upload-artifact@v4
      with:
        name: twrp_recovery
        path: ~/android/twrp/out/target/product/$DEVICE/recovery.img
